<section id="about">
  <div class="about">
    <!-- about text and photo -->
    <div class="about-img">
      <div class="about-img-holder">
        <img src="<%= profile.img %>" alt="<%= profile.name %>">
      </div>
    </div>
    <div>
      <div class="about-title">
        <h2><%= profile.name %></h2>
      </div>
      <div class="about-content">
        <h4><%= profile.title %></h4>
        <p><%= profile.about %></p>
        <!-- Place this tag where you want the button to render. -->
        <a 
          class="github-button" 
          href="https://github.com/travisformayor" 
          data-size="large" 
          aria-label="Check out @travisformayor on GitHub">
          @travisformayor
        </a>
      </div>
    </div>
  </div>
</section>