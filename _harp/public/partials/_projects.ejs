<section id="projects">
  <!-- top project. Screenshots and links to app and code -->
  <% projects.forEach(project => { %>
    <div class="project">
      <!-- template this in node ejs -->
      <div class="project-img">
        <img src="<%= project.screen %>" alt="<%= project.title %>">
      </div>
      <div class="project-info">
        <div class="project-title">
          <h2><%= project.title %></h2>
        </div>
        <div class="project-content">
          <h3><%= project.tagline %></h3>
          <!-- a href="<%= project.siteUrl %>">Site</a-->
          <!--a href="<%= project.github %>">Github</a-->
          <div style="display: inline-block">
            <% if (project.siteUrl && project.id === 3) { %>
              <a href="<%= project.siteUrl %>" target="_blank">
                <button class="site-link">
                  Visit <%= project.title %>
                </button>
              </a>
            <% } %>
          </div>
          <div style="display: inline-block">
            <% if (project.github) { %>
              <a 
                class="github-button" 
                href="<%= project.github %>" 
                data-size="large" 
                aria-label="View Project on GitHub">
                <%= project.title %>
              </a>
            <% } %>
          </div>
          <p><%= project.info %></p>
        </div>
      </div>
    </div>
  <% }); %>
</section>