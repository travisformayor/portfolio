<section id="about">
  <div class="about">
    <!-- about text and photo -->
    <div class="about-img">
      <div class="about-img-cut">
        <img src="<%= profile.img %>" alt="<%= profile.name %>">
      </div>
    </div>
    <div>
      <div class="about-title">
        <h2><%= profile.name %></h2>
      </div>
      <div class="about-content">
        <h4><%= profile.title %></h4>
        <p><%= profile.about %></p>
      </div>
    </div>
  </div>
</section>